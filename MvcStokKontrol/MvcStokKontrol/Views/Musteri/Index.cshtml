@using MvcStokKontrol.Models.Entity;
@model List<TblMusteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        Aranacak Müşteri Adı:@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>Musteri ID</th>
        <th>Musteri Adı</th>
        <th>Musteri Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>


    </tr>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                <th>@mus.MusteriID</th>
                <td>@mus.MusteriAd</td>
                <td>@mus.MusteriSoyad</td>
                <td><a href="/Musteri/Sil/@mus.MusteriID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Musteri/MusteriGetir/@mus.MusteriID" class="btn btn-success">Güncelle</a></td>


            </tr>
        }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Musteri ekle</a>